{
	"extends": "airbnb-base",
	"parserOptions": {
		"sourceType": "script"
	},
	"rules": {
		"strict": ["error", "global"],
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"no-plusplus": "off"
	},
	"overrides": [
		{
			"files": ["*.test.js"],
			"globals": {
				"describe": true,
				"expect": true,
				"test": true,
				"beforeAll": true,
				"afterAll": true
			}
		}
	]
}
